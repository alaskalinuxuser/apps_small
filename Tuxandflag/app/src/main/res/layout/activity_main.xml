<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.alaskalinuxuser.tuxandflag.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="top|center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/board3"
            android:rowCount="3"
            android:columnCount="3">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/coin"
                android:rowCount="0"
                android:columnCount="0"
                android:onClick="putPiece"
                android:id="@+id/p0"
                android:tag="0" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/coin"
                android:rowCount="0"
                android:columnCount="1"
                android:onClick="putPiece"
                android:id="@+id/p1"
                android:tag="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/coin"
                android:rowCount="0"
                android:columnCount="2"
                android:onClick="putPiece"
                android:id="@+id/p2"
                android:tag="2"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/coin"
                android:rowCount="1"
                android:columnCount="0"
                android:onClick="putPiece"
                android:id="@+id/p3"
                android:tag="3" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/coin"
                android:rowCount="1"
                android:columnCount="1"
                android:onClick="putPiece"
                android:id="@+id/p4"
                android:tag="4" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/coin"
                android:rowCount="1"
                android:columnCount="2"
                android:onClick="putPiece"
                android:id="@+id/p5"
                android:tag="5"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/coin"
                android:rowCount="2"
                android:columnCount="0"
                android:onClick="putPiece"
                android:id="@+id/p6"
                android:tag="6" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/coin"
                android:rowCount="2"
                android:columnCount="1"
                android:onClick="putPiece"
                android:id="@+id/p7"
                android:tag="7" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/coin"
                android:rowCount="2"
                android:columnCount="2"
                android:onClick="putPiece"
                android:id="@+id/p8"
                android:tag="8"/>
        </GridLayout>

        <Button
            android:text="Start Over"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="startOver"
            android:layout_margin="30sp"
            android:id="@+id/replayButton" />


        <Button
            android:text="Exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="exitApp"
            android:id="@+id/exitButton" />

        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:text="This game is just like Tic-Tac-Toe. Have fun!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gameText" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/aklu"
        android:visibility="invisible"
        android:id="@+id/aklu" />

</RelativeLayout>
